{
  "tests": [
    {
      "name": "Generate document topics",
      "method": "POST",
      "path": "/",
      "body": {
        "docType": "реферат",
        "subject": "Искусственный интеллект",
        "pages": 10,
        "additionalInfo": ""
      },
      "expectedStatus": 200,
      "expectedBody": {
        "topics": "array"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Missing subject error",
      "method": "POST",
      "path": "/",
      "body": {
        "docType": "курсовая",
        "pages": 15
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
